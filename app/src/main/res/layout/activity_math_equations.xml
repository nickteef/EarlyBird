<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".maths.MathEquations"
    android:background="@color/brown">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_true_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solve the equation"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="496dp"
            android:fontFamily="@font/arista_pro"/>

        <Button
            android:id="@+id/button_submit"
            android:fontFamily="@font/arista_pro"
            android:layout_width="match_parent"
            android:background="@color/light_blue"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            android:text="Preveri"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="299dp"/>

        <Button
            android:id="@+id/generate_equation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arista_pro"
            android:background="@color/light_blue"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Generate equation"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="465dp" />

        <EditText
            android:id="@+id/user_anwser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/neon"
            android:inputType="numberSigned"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="237dp" />

        <TextView
            android:id="@+id/text_equation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxx"
            android:fontFamily="@font/neon"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="115dp" />

        <TextView
            android:id="@+id/textView_pravilno"
            android:fontFamily="@font/neon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="628dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>